    		e1.printStackTrace();
    	}
		try(Connection con=DriverManager.getConnection(  
    			"jdbc:mysql://localhost:3306/imdb","root","root");){
			loadData(con);
    	}catch(SQLException e1){
    		e1.printStackTrace();
    	}		
	}
	
