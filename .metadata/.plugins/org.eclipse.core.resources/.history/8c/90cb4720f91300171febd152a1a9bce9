import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class LoadProteinData {
	
	File dbpath;

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}	
	
	public LoadProteinData(){
		dbpath = new File("D:/neo4j-enterprise-3.1.1-windows/neo4j-enterprise-3.1.1/data/databases/graph.db");
	}
	
	public void loadData(File fileEntry){
		Scanner file;
		try {
			file = new Scanner(fileEntry);
			while(file.hasNext()){
				String line = file.next();
				String fields[] = line.split(" ");
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}	
	}
	
	public void readData(){
		ClassLoader classLoader = getClass().getClassLoader();
		listFilesForFolder(new File(classLoader.getResource("targetGraph").getPath()));
	}
	
	public void listFilesForFolder(File folder) {
		System.out.println(folder.toString());
	    for (File fileEntry : folder.listFiles()){
	    	loadData(fileEntry);
	    }
	}
	
}
